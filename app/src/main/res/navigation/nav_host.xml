<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/onBoardFragment">


    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.geeks.homenotes.ui.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note" >
        <argument
            android:name="note"
            app:nullable="true"
            app:argType="com.geeks.homenotes.data.models.NoteModel"/>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.geeks.homenotes.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />

    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.geeks.homenotes.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.geeks.homenotes.ui.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" >
        <action
            app:popUpTo="@id/onBoardFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_onBoardFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_onBoardFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>